            </field>
        </record>
        <record id="nantian_view_attendance_who" model="ir.ui.view">
            <field name="name">hr.nantian_attendance.tree</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.view_attendance_who"/>
